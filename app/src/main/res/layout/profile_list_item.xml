<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/tour_card"
        android:layout_width="match_parent"
        android:layout_height="86dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name_tour"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/name_tour"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/share_tour"
                android:layout_width="62dp"
                android:layout_height="37dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:text="@string/share_tour"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edit_tour_button" />

            <Button
                android:id="@+id/edit_tour_button"
                android:layout_width="62dp"
                android:layout_height="37dp"
                android:layout_marginEnd="64dp"
                android:layout_marginBottom="8dp"
                android:text="@string/edit_tours"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/starting_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/start_tour"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_tour" />

            <ImageView
                android:id="@+id/private_tour_image"
                android:layout_width="17dp"
                android:layout_height="23dp"
                android:layout_marginStart="59dp"
                app:layout_constraintStart_toEndOf="@+id/name_tour"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/hammer"
                android:layout_width="17dp"
                android:layout_height="23dp"
                android:layout_marginStart="28dp"
                app:layout_constraintStart_toEndOf="@+id/private_tour_image"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>